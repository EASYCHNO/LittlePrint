<Application x:Class="LittlePrint.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LittlePrint"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="BtnStyle">
            <Setter Property="Height" Value="50"></Setter>
            <Setter Property="Width" Value="250"></Setter>
            <Setter Property="FontSize" Value="25"></Setter>
            <Setter Property="FontFamily" Value="Cascadia Code SemiBold"></Setter>
            <Setter Property="Background" Value="#FF9B94"></Setter>
            <Setter Property="Foreground" Value="#f76157"></Setter>
        </Style>
    </Application.Resources>
</Application>
